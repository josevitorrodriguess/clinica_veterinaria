generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Usuários do sistema: médicos e admins
model User {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  password  String
  role      Role        @default(MEDIC)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relação com consultas
  appointments Appointment[]
}

// Clientes (donos de pets)
model Client {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  phone     String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relação com pets
  pets Pet[]
  // Relação com consultas
  appointments Appointment[]
}

// Pets
model Pet {
  id        String      @id @default(uuid())
  name      String
  species   String
  breed     String?
  age       Int?
  clientId  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relações
  client Client @relation(fields: [clientId], references: [id])
  appointments Appointment[]
}

// Consultas/Agendamentos
model Appointment {
  id        String      @id @default(uuid())
  date      DateTime
  reason    String
  userId    String      // médico
  clientId  String      // dono do pet
  petId     String      // pet
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relações
  user   User   @relation(fields: [userId], references: [id])
  client Client @relation(fields: [clientId], references: [id])
  pet    Pet    @relation(fields: [petId], references: [id])
}

// Enum para o tipo de usuário
enum Role {
  MEDIC
  ADMIN
}
